<html>
    <head>
        <title>Login Here</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="icon" href="/images/icon-50.png">
        <link rel='stylesheet' href='/stylesheets/style.css' />
    </head>
    <body class="container">
        <div class="page-header">
            <h1>Leal PT</h1>
        </div>

        <nav class="navbar navbar-default">
            <div class="container-fluid">
               
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li><a href="/">Inicio</a></li>
                        <li><a href="/signup">Regístrate</a></li>
                        <li><a href="/dashboard">Dashboard</a></li>
                    </ul>

                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="/login">Iniciar Sesión</a></li>
                        <li><a href="/logout">Salir</a></li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container row">
           
           <div class="container row">
                <h2>Crear Transaccion</h2>
                <h4 style="color:#FF0000"><strong><%= message %></strong></h4>
                <div class="jumbotron col-sm-4 pull-center">
                    <form action="/create-transaction" method="post">
                        <div>
                            <label>Valor:</label>
                            <input type="number" name="value"/>
                        </div>
                        <div>
                            <label>Puntos:</label>
                            <input type="number" name="points"/>
                        </div>
                        <div>
                            <input class="btn btn-primary" type="submit" value="Crear Transaccion"/>
                        </div>
                    </form>                  
                </div>          
            </div>
            
            <hr>


            <div class="container row">
                <h2>Actualizar Transaccion</h2>
                <h4 style="color:#FF0000"><strong><%= message %></strong></h4>
                <div class="jumbotron col-sm-4 pull-center">
                    <form action="/update-transaction" method="post">
                        <div>
                            <label>Id Transaccion:</label>
                            <input type="number" name="transactionId"/>
                        </div>
                        <div>
                            <label>Estado Transaccion( 1 | 0 ):</label>
                            <input type="number" name="state"/>
                        </div>
                        <div>
                            <input class="btn btn-primary" type="submit" value="Actualizar Transaccion"/>
                        </div>
                    </form>                 
                </div>          
            </div>

            <hr>

            <div class="container row">
                <h2>Consultar Transacciones</h2>
                <div>
                    <form action="/get-transactions" method="post">
                        <div>
                            <input class="btn btn-primary" type="submit" value="Consultar Transacciones"/>
                        </div>
                    </form>                  
                </div>   
                <table class="a">
                    <tr>
                        <th>ID_Transaccion</th><th>Fecha</th><th>Valor</th><th>Puntos</th><th>Estado</th>
                    </tr>
                    <% for (var i = 0; i < transactions.length; i++) { %>
                        <tr>
                        <td><%= transactions[i].transaction_id %></td>
                        <td><%= transactions[i].created_date %></td>
                        <td><%= transactions[i].value %></td>
                        <td><%= transactions[i].points %></td>
                        <td><%= transactions[i].status %></td>
                        </tr>    
                    <% } %>
                </table>        
            </div>

            <hr>

                <div class="container row">
                    <h2>Consultar Puntos</h2>
                    <h4 style="color:#FF0000"><strong><%= message %></strong></h4>
                    <div>
                        <form action="/get-points" method="post">
                            <div>
                                <input class="btn btn-primary" type="submit" value="Crear Transaccion"/>
                            </div>
                        </form>                  
                    </div>          
                </div>
            <hr>


        </div>
    </body>
</html>